/* 容器 */
.container {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: 100rpx;
}

/* 头部统计 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  color: white;
}

.stats-row {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
}

/* 筛选器 */
.filter-section {
  background: white;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-tabs {
  white-space: nowrap;
  padding: 0 40rpx;
}

.filter-tab {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

/* 记录区域 */
.records-section {
  flex: 1;
}

.date-group {
  margin-bottom: 40rpx;
}

.date-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx 20rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.date-total {
  font-size: 24rpx;
  color: #ff4757;
  font-weight: 500;
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: white;
  border-bottom: 1rpx solid #f8f9fa;
}

.record-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.category-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
}

.record-info {
  flex: 1;
}

.record-desc {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.record-category {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.record-right {
  text-align: right;
}

.record-amount {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
  margin-bottom: 8rpx;
}

.record-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: white;
  margin: 40rpx;
  border-radius: 24rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.add-record-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 加载更多 */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-more-btn {
  background: #f8f9fa;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 24rpx;
  color: #666;
} 